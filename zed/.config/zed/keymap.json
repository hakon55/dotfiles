[
  {
    "bindings": {
      "ctrl-j": "workspace::ToggleBottomDock",
      "ctrl-b": "workspace::ToggleLeftDock",
      "ctrl-s": "workspace::Save"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "shift shift": "file_finder::Toggle",
      "ctrl-shift-w": "pane::CloseActiveItem",
      "ctrl-Â´": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor && !menu",
    "bindings": {
      "ctrl-a": "editor::SelectAll", // vim default: increment
      "ctrl-r": "projects::OpenRecent", // For at ctrl-r funker i terminal
      "ctrl-f": "buffer_search::Deploy",

      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp",
      "shift-alt-j": "editor::AddSelectionBelow",
      "shift-alt-k": "editor::AddSelectionAbove",
      "alt-o": "editor::SelectLargerSyntaxNode",
      "alt-i": "editor::SelectSmallerSyntaxNode"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-w h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-w l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-w k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-w j": ["workspace::ActivatePaneInDirection", "Down"]
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "H": ["workspace::SendKeystrokes", "^"],
      "L": ["workspace::SendKeystrokes", "$"],

      "ctrl-c": "editor::Copy",
      "ctrl-v": "editor::Paste",
      "ctrl-x": "editor::Cut"
      // Put key bindings here if you want them to work in normal & visual mode.
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "U": "vim::Redo"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": [
        "vim::PushOperator",
        {
          "AddSurrounds": {}
        }
      ]
    }
  }
]
